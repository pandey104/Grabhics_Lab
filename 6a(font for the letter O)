#include<math.h>
#include< glut.h>
void myInit()
{
glMatrixMode(GL_PROJECTION);
glLoadIdentity();
gluOrtho2D(0,500,0,500);
glMatrixMode(GL_MODELVIEW);
glClearColor(1,0,0,0);
glColor3f(1,0,0);
}
void myDisplay(void)
{
float angle;
int i;
glTranslatef(250.0,250.0,0.0);
glBegin(GL_QUAD_STRIP);
for(i=0;i<=16;i++)
{
angle = 3.1415 / 6.0 * i+(3.1415/2);;
glVertex2f(40*cos(angle), 40*sin(angle)); //change the angle for
glVertex2f(50*cos(angle), 50*sin(angle)); //different thickness of letter ‘O’
}
glEnd();
glFlush();
}
void main()
{
glutInitWindowSize(500,500);
glutCreateWindow("Letter O");
glutDisplayFunc(myDisplay);
myInit();
glutMainLoop();
}
